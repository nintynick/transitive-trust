{
  "name": "@ttp/db",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "db:migrate": "tsx src/neo4j/migrations/runner.ts",
    "db:seed": "tsx src/seed.ts"
  },
  "dependencies": {
    "@ttp/shared": "workspace:*",
    "neo4j-driver": "^5.27.0"
  },
  "devDependencies": {
    "dotenv": "^16.4.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
